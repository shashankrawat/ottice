<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="35dp">

    <TextView
        android:id="@+id/filterHelpTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/filter_help_title"
        android:textColor="#31b46e"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/filterHelpTitle"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/filter_help_message"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>
    <Button
        android:id="@+id/filterGotItButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/got_it"
        android:textSize="18sp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/help_button_background"/>

    <ImageView
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/filter_help_icon_background"
        android:layout_alignParentRight="true"
        android:src="@mipmap/empty_filter"
        android:padding="25dp"/>
</RelativeLayout>