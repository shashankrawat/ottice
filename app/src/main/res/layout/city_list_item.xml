<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cityItemView">

    <TextView
        android:id="@+id/cityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textColor="@color/color_fefefe"
        android:gravity="center_horizontal"
        android:textSize="@dimen/sp_22"
        android:textStyle="bold"
        android:paddingTop="@dimen/dp_15" />
    <TextView
        android:id="@+id/totalSpacesAvailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/cityName"
        android:textColor="@color/color_fefeff"
        android:textSize="@dimen/sp_12"
        android:maxLines="1"
        android:textAllCaps="true"
        android:layout_marginTop="@dimen/dp_5nve"
        android:paddingBottom="@dimen/dp_10"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_c7c6c7"
        android:layout_below="@id/totalSpacesAvailable"/>
</RelativeLayout>