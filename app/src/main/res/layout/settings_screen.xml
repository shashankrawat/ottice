<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/settingsAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/picker_dialogbox_background">
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/picker_dialogbox_background">
            <TextView
                android:id="@+id/settingsToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="20sp"/>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/settingsAppBar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/supportLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/setting_item_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/support"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/support"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:paddingTop="12dp"
                        android:paddingBottom="10dp"
                        android:paddingRight="15dp"
                        android:paddingLeft="15dp"
                        android:maxLines="1"
                        android:drawablePadding="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#292929"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"/>

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1800 121 7377"
                        android:textColor="@color/color_3b95b3"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:maxLines="1"
                        android:drawableLeft="@mipmap/phone_icon"
                        android:drawableStart="@mipmap/phone_icon"
                        android:drawablePadding="20dp"/>


                    <!--<View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_3e3e3e"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"/>-->

                    <TextView
                        android:id="@+id/emailContact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/mail_contact"
                        android:textColor="@color/color_3b95b3"
                        android:textSize="16sp"
                        android:gravity="center_vertical"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:maxLines="1"
                        android:drawableLeft="@mipmap/email_icon"
                        android:drawableStart="@mipmap/email_icon"
                        android:drawablePadding="20dp"/>



                </LinearLayout>

            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/helpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_it_works"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:maxLines="1"
                android:elevation="4dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/setting_item_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/supportLayout"
                android:drawableLeft="@mipmap/setting_icon"
                android:drawableStart="@mipmap/setting_icon"
                android:drawablePadding="20dp"
                tools:targetApi="lollipop" />


            <Button
                android:id="@+id/privacyPolicyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/privacy_policy"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:maxLines="1"
                android:elevation="4dp"
                android:gravity="start|center_vertical"
                android:background="@drawable/setting_item_background"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="15dp"
                android:paddingLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/helpButton"
                android:drawableLeft="@mipmap/policy_privacy_icon"
                android:drawableStart="@mipmap/policy_privacy_icon"
                android:drawablePadding="20dp"
                tools:targetApi="lollipop" />

        </RelativeLayout>

    </ScrollView>
</RelativeLayout>